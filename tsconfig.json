{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noImplicitAny": false,
    "lib": ["es2019", "es2020", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@libraries/*": [
        "universe/libraries/*"
      ],
      "@loaders/*": [
        "loaders/*"
      ],
      "@middlewares/*": [
        "universe/middlewares/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@universe/*": [
        "universe/*"
      ]
    }
  },
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "swc": true
  }
}
